<h1>Dionysus-by-the-Dime</h1>

<p>There are <%= total_pages %> pages.</p>
<p>Which pages would you like to display?</p>

<div class="form-wrapper">
  <%= form_tag list_products_path do %>
  <%= label_tag(:start_page, "Start page:") %>
  <%= text_field_tag (:start_page) %>
  <%= label_tag(:end_page, "End page:") %>
  <%= text_field_tag (:end_page) %>
  <%= submit_tag("Display") %>
  <% end %>
</div>  

<% if @start_page != nil && @end_page != nil %>
  <p>Now displaying pages <%= @start_page %> to <%= @end_page %></p>
  <% categories = Array.new %>
    
  <% @products.each do |page| %>
     <% page['result'].each do |product| %>
        <% categories << product['primary_category'] %>
        <% categories.uniq! %>
    <% end %>
  <% end %>
  <%= categories %>
<% else %>
  <p>Please select start and end pages.</p>
<% end %>
  
  